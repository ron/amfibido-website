    <script>
      // Mailchimp form handling with AJAX submission and redirect
      document.querySelectorAll('.email-form').forEach(form => {
        form.addEventListener('submit', function(e) {
          e.preventDefault();

          const emailInput = this.querySelector('input[name="EMAIL"]');
          const email = emailInput.value;
          const button = this.querySelector('button[type="submit"]');
          const originalButtonText = button.textContent;

          // Basic email validation
          if (!email || !email.includes('@')) {
            alert('Please enter a valid email address');
            return;
          }

          // Disable button and show loading state
          button.disabled = true;
          button.textContent = 'Sending...';

          // Get form action and convert to JSONP endpoint for AJAX
          const formAction = this.getAttribute('action');
          const submitUrl = formAction.replace('/post?', '/post-json?') + '&EMAIL=' + encodeURIComponent(email) + '&c=?';

          // Use JSONP to submit to Mailchimp
          const script = document.createElement('script');
          script.src = submitUrl;
          document.body.appendChild(script);

          // Create a global callback for Mailchimp's JSONP response
          window.mailchimpCallback = function(data) {
            // Clean up
            document.body.removeChild(script);
            delete window.mailchimpCallback;

            // Redirect to thank you page regardless of response
            // (even if already subscribed, we want to show thank you page)
            window.location.href = '{{ "/thankyou" | url }}';
          };

          // Fallback: redirect after 2 seconds if no response
          setTimeout(() => {
            if (window.mailchimpCallback) {
              delete window.mailchimpCallback;
              window.location.href = '{{ "/thankyou" | url }}';
            }
          }, 2000);
        });
      });

      // Video modal functionality
      const videoModal = document.getElementById('videoModal');
      const openVideoBtn = document.getElementById('openVideoModal');
      const closeVideoBtn = document.getElementById('closeVideoModal');
      const youtubePlayer = document.getElementById('youtubePlayer');
      const modalEmailBtn = document.getElementById('modalEmailButton');

      openVideoBtn.addEventListener('click', () => {
        youtubePlayer.src = 'https://www.youtube-nocookie.com/embed/sCV98bm-EgM?autoplay=1';
        videoModal.classList.add('active');
        document.body.style.overflow = 'hidden';
      });

      function closeModal() {
        videoModal.classList.remove('active');
        youtubePlayer.src = '';
        document.body.style.overflow = 'auto';
      }

      closeVideoBtn.addEventListener('click', closeModal);

      videoModal.addEventListener('click', (e) => {
        if (e.target === videoModal) {
          closeModal();
        }
      });

      modalEmailBtn.addEventListener('click', () => {
        closeModal();
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
      });

      // Close modal on Escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && videoModal.classList.contains('active')) {
          closeModal();
        }
      });
    </script>
